@media screen and (max-width: minimal-menu-width)
    #menu
        flex-direction: column
        .menu-link
            padding: 10px
            text-align: center
    #menu.collapsed
        .menu-link
            display: none
        #burger
            display inline-block
            text-align center
            margin auto