// header styles
logo-size = 180px
logo-top-spacing = 20px
logo-to-menu-gap = 10px
menu-to-banner-gap = 20px

page-quote-row-padding-top = 30px
page-quote-row-padding-bottom = 20px
page-quote-to-signature-gap = 20px
burger-size = 30px

minimal-menu-width = 750px

#header
    background-color white

#menu
    display: flex
    justify-content: space-between
    margin-bottom menu-to-banner-gap
    #burger
        display: none
        background-image: url(/img/burger-icon.svg)
        width: burger-size
        height: burger-size

    .menu-link
        text-transform: uppercase
        font-size: 14pt
        color cd-hellgrau

