menu-button-size = 30px

#header
    background-color: cd-background
    width: 100%
    padding 30px
    box-sizing: border-box
    display: flex
    justify-content: space-between
    align-items: center
    //flex-direction: row-reverse

    h1
        font-size: 20px
    
    #close-button
        display: none
        height: menu-button-size
        width:  menu-button-size
    #open-button
        display: block
        height: menu-button-size
        width:  menu-button-size

// #header-title    

#header.menu-active
   
    #close-button
        display block
    #open-button
        display none

#menu-button
    @extends h1

#navbar
    font-size: 9pt
    font-family: x 
    display: flex
    a
        padding-left 30px
        padding-right: 30px
    
    

