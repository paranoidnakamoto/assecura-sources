// footer styles
/*=====================================================
Variables to tweak the style 
=====================================================*/
up-button-size = 50px
up-arrow-size = 15px
up-arrow-size = 15px

/*==========================================================
Serious Stuff
==========================================================*/
#up-button
    background-color white
    position fixed
    right 20px
    bottom 20px
    border-radius 50%
    height up-button-size
    width up-button-size
    cursor: pointer
    box-shadow: 0px 0px 3px black;
#up-arrow
    position absolute
    width up-arrow-size
    height up-arrow-size
    top 50%
    left 50%
    transform translate(-50%, -50%)
    fill footer-background
