#header
    position: fixed
    top: 0 
    left: 0 
    z-index: 999
    border-bottom: solid 5px cd-red
    background-color: cd-gray
    width: 100%
    padding 10px
    box-sizing: border-box
    display: flex
    justify-content: space-between
    align-items: center
    // flex-direction: row-reverse
    transition top 0.1s

    h1
        font-size: header-logo-size
        letter-spacing: 3px
        padding-left: 35px
    p
        font-size: 11.5px
        font-family: x 
        letter-spacing: 4px
        // padding-bottom: 50px
            
    #close-button
        display: none
        height: menu-button-size
        width:  menu-button-size
    #open-button
        display: block
        height: menu-button-size
        width:  menu-button-size

